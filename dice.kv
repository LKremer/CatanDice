<ConfirmPopup>:
    size_hint: 0.9, 0.4
    title: 'Confirm reset'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Do you really want to reset all counts?'
        BoxLayout:
            Button:
                text: 'Yes'
                on_press: app.reset_counts()
            Button:
                text: 'No'
                on_press: self.parent.parent.parent.parent.parent.dismiss()

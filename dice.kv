# -*- coding: utf-8 -*-

<MainScreen>
    BoxLayout
        orientation: 'vertical'
        Button:
            id: roll_btn
            text: 'ROLL!'
            font_size: '40sp'
            on_press: app.roll_dice()
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: eyes
                text: ''
                font_size: '40sp'
            Label:
                id: event
                text: ''
                font_size: '40sp'
        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: 'reset'
                on_press:
                    app.show_reset_popup()
            Button:
                text: 'stats'
                on_press:
                    root.manager.current = 'stats'
                    root.manager.transition.direction = 'left'


